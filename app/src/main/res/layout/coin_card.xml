<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/second_rectangle_splash">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/coinImageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="63dp"
            android:scaleType="centerInside"
            android:src="@drawable/shape_ripple"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/my_image_view"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="63dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/coinNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/swissra_bold"
            android:text="ريبـل  Ripple"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/my_image_view"
            app:layout_constraintStart_toStartOf="@+id/my_image_view"
            app:layout_constraintTop_toBottomOf="@+id/my_image_view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/coinPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:text="10,544.69  $"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/coinNameTextView"
            app:layout_constraintStart_toStartOf="@+id/coinNameTextView"
            app:layout_constraintTop_toBottomOf="@+id/coinNameTextView" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>